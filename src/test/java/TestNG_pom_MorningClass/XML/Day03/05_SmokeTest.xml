<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="methods" thread-count="5">

    <listeners>
        <listener class-name="utilities.MyTestListener"> </listener>
        <listener class-name="org.testng.reporters.FailedReporter"> </listener>
        <listener class-name="org.testng.reporters.EmailableReporter2"> </listener>
    </listeners>

    <test verbose="2" preserve-order="true" name="smoke_test">
        <packages>
            <package name="tests.smoke_test"> </package>
        </packages>
    </test>
</suite>